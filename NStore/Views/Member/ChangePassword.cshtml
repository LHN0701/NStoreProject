@model MemberModel.Input.ChangePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Change password</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Home Page</a></li>
        <li class="breadcrumb-item active">Change password</li>
    </ol>
    <div class="card mb-4">
        @*<div class="card-header">
                <a class="btn btn-success" asp-action="Login" asp-controller="Member">Return</a>
            </div>*@

        <div class="card-body">
            <div class="col-md-8">
                <form asp-controller="Member" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-error"></div>
                    <input type="hidden" asp-for="Email" class="form-control" />
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EnterNewPassword" class="control-label"></label>
                        <input asp-for="EnterNewPassword" class="form-control" />
                        <span asp-validation-for="EnterNewPassword" class="text-error"></span>
                    </div>
                    @if (ViewData["Noteti"] != null)
                    {
                        <div class="form-group text-success">
                            @Html.Raw(ViewData["Noteti"])
                        </div>
                    }
                    <div class="form-group">
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}