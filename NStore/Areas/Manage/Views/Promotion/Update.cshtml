@model PromotionModel.PromotionBase
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutBackend.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Update promotion</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Manage">Home Page</a></li>
        <li class="breadcrumb-item active">Update promotion</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Promotion">Return</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Update" asp-controller="Promotion" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApplyForAll" class="control-label"></label>
                        <input asp-for="ApplyForAll" type="checkbox" />
                        <span asp-validation-for="ApplyForAll" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FromDate" class="control-label"></label>
                        <input asp-for="FromDate" type="datetime" class="form-control" />
                        <span asp-validation-for="FromDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToDate" class="control-label"></label>
                        <input asp-for="ToDate" type="datetime" class="form-control" />
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPercent" class="control-label"></label>
                        <input asp-for="DiscountPercent" type="number" class="form-control" />
                        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountAmount" class="control-label"></label>
                        <input asp-for="DiscountAmount" type="number" class="form-control" />
                        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

